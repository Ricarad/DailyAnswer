<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ricarad.app.dailyanswer.activity.AddTopicActivity"
    android:background="@color/colorLightPostBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cross_shutdown_selector"
            android:clickable="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:text="发布新帖"
            android:textColor="@color/colorFaintPostText"
            android:gravity="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/topic_"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="发布"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/colorMarkPostText"
            android:background="@color/colorLightPostBackground"/>
    </LinearLayout>
</LinearLayout>
