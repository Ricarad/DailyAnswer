<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ricarad.app.dailyanswer.activity.AddTopicActivity"
    android:background="@color/colorLightPostBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cross_shutdown_selector"
            android:clickable="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:text="发布新帖"
            android:textColor="@color/colorFaintPostText"
            android:gravity="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/topic_commit_btn"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="发布"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/colorMarkPostText"
            android:background="@color/colorLightPostBackground"/>
    </LinearLayout>
    <View
        style="@style/post_view_split"/>
    <EditText
        android:id="@+id/topic_title_et"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:hint="输入标题"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        style="@style/custom_et"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/post_et_selector"
        android:textColor="#333333"
        android:textSize="21sp"/>
    <!--从这里开始整个编辑器-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/topic_bold_iv"
            android:clickable="true"
            android:layout_width="33dp"
            android:layout_height="32dp"
            android:layout_marginRight="1dp"
            android:src="@drawable/editor_bold_btn_off"
            android:translationY="-1dp"/>
        <ImageView
            android:id="@+id/topic_italic_iv"
            android:clickable="true"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/editor_italic_btn_off"/>
        <ImageView
            android:id="@+id/topic_underline_iv"
            android:clickable="true"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/editor_underline_btn_off"/>
        <ImageView
            android:id="@+id/topic_img_iv"
            android:clickable="true"
            android:layout_width="26dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/editor_img_btn"/>
        <ImageView
            android:id="@+id/topic_undo_iv"
            android:clickable="true"
            android:layout_width="26dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/editor_undo_btn"
            android:layout_gravity="end"/>
        <ImageView
            android:id="@+id/topic_redo_iv"
            android:clickable="true"
            android:layout_width="26dp"
            android:layout_height="32dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="end"
            android:src="@drawable/editor_redo_btn"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/topic_wrapper_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/post_et_focused_background"
        android:layout_margin="5dp"
        android:focusable="true">
        <jp.wasabeef.richeditor.RichEditor
            android:id="@+id/topic_content_re"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <!--编辑器代码结束-->
</LinearLayout>
