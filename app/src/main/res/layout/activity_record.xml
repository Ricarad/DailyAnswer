<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RecordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorWhite">
        <ImageView
            android:id="@+id/record_back_iv"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/back_white_selector"
            android:clickable="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="练习记录"
            android:textColor="@color/colorSpecBlack"
            android:textSize="50dp" />
        <ImageView
            android:clickable="true"
            android:id="@+id/record_edit_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_mistake" />
    </RelativeLayout>

    <ListView

        android:id="@+id/record_question_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
    </ListView>
    <TextView
        android:visibility="gone"
        android:id="@+id/record_empty_tv"
        android:textSize="40dp"
        android:gravity="center"
        android:text="最近没有做题哦！"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>