<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/setting_show_about_us_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_about_us_background"
    tools:context="com.ricarad.app.dailyanswer.activity.SettingAboutUsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/setting_my_settings_return"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/setting_fragment_guide_return"/>


    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/colorBlack"
            android:id="@+id/setting_my_settings_myself"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       三个代表团队是一个致力于知识共享的团队，我们代表最新式的技术，代表最新式的交互环境，代表最新的知识。"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
           android:layout_marginTop="50dp"/>




    </LinearLayout>
</LinearLayout>
