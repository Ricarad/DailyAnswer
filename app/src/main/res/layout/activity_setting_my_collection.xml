<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ricarad.app.dailyanswer.activity.SettingMyCollectionActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/cololSkyBlue">
        <ImageView
            android:id="@+id/setting_my_collection_exit_iv"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back_selector"
            android:clickable="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:text="我的收藏"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="22sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/setting_my_collection_hint_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="您还没有收藏的帖子呢~"
        android:textSize="26sp"
        android:gravity="center"
        android:textColor="@color/colorFaintPostText"/>
