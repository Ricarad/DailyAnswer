<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_version_background"
    android:background="@drawable/setting_show_version_background"
    tools:context="com.ricarad.app.dailyanswer.activity.SettingShowVersionActivity">
    <ImageView
        android:id="@+id/setting_show_version_back_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/back_white_selector"
        />
    <ImageView
    android:id="@+id/setting_show_version_logo"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="60dp"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:src="@drawable/logo"/>
<TextView
    android:id="@+id/setting_show_version_number"
    android:textSize="25sp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="15dp"
    android:layout_below="@+id/setting_show_version_logo"
    android:textColor="@color/colorBlack"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="微客问答社区
     WeCode"/>
    <TextView
        android:layout_below="@+id/setting_show_version_number"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0.0"/>
</RelativeLayout>
