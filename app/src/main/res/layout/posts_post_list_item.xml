<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_vertical">
    <LinearLayout
        android:id="@+id/post_item_header_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center_vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post_item_potrait_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:src="@drawable/logo"/>
        <TextView
            android:id="@+id/post_item_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="获取中"
            android:textSize="20sp"
            android:textColor="@color/colorMarkPostText"/>
    </LinearLayout>
    <WebView
        android:id="@+id/post_item_content_wv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_item_header_ll"/>
    <LinearLayout
        android:paddingTop="8dp"
        android:id="@+id/post_item_footer_ll"
        android:layout_below="@id/post_item_content_wv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <TextView
            android:id="@+id/post_item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取中"
            android:textSize="15sp"
            android:textColor="@color/colorFaintPostText" />
        <TextView
            android:id="@+id/post_item_review_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="回复(2)"
            android:textSize="16sp"
            android:textColor="@color/colorMarkPostText"/>
    </LinearLayout>
</RelativeLayout>