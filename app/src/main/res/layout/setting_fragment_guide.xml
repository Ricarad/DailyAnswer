<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="个人中心"
        android:textColor="#101010"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/setting_fragment_guide_self"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/setting_fragment_guide_photo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/setting_fragment_guide_photo" />

        <ImageView
            android:src="@drawable/setting_fragment__guide_gradeicon"
            android:id="@+id/setting_fragment_guide_grade"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/setting_fragment_guide_photo" />

        <TextView

            android:id="@+id/setting_fragment_guide_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/setting_fragment_guide_grade"
            android:text="shy"
            android:textColor="#050505"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_fragment_guide_username"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/setting_fragment_guide_photo"
            android:paddingLeft="13dp"
            android:text="个人主页"
            android:textColor="#929292"
            android:textSize="23dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/setting_fragment_guide_goto" />

    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#F5F5F5" />

    <RelativeLayout
        android:id="@+id/setting_fragment_guide_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/setting_collect_icon"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:src="@drawable/setting_fragment_guide_collect" />

        <TextView
            android:layout_toRightOf="@+id/setting_collect_icon"
            android:layout_centerVertical="true"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="我的收藏"
            android:textColor="#050505"
            android:textSize="25sp" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/setting_fragment_guide_gotocollection"
            android:layout_width="20dp"
            android:layout_height="30dp"

            android:layout_marginRight="15dp"
            android:src="@drawable/setting_fragment_guide_goto" />

    </RelativeLayout>
    <View
        android:background=" #F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/setting_fragment_guide_mycreation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/setting_topic_icon"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_marginLeft="18dp"
            android:src="@drawable/setting_fragment_guide_texticon" />

        <TextView
            android:layout_toRightOf="@+id/setting_topic_icon"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="我的帖子"
            android:textColor="#050505"
            android:textSize="25sp" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/setting_fragment_guide_gototext"
            android:layout_marginRight="15dp"
            android:layout_width="20dp"
            android:layout_height="30dp"

            android:src="@drawable/setting_fragment_guide_goto" />

    </RelativeLayout>
    <View
        android:background="#F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/setting_fragment_guide_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/setting_settings_icon"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_marginLeft="18dp"
            android:src="@drawable/setting_about_icon" />

        <TextView
            android:layout_toRightOf="@+id/setting_settings_icon"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="关于我们"
            android:textColor="#050505"
            android:textSize="25sp" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/setting_fragment_guide_gotosets"
            android:layout_marginRight="15dp"
            android:layout_width="20dp"
            android:layout_height="30dp"

            android:src="@drawable/setting_fragment_guide_goto" />

    </RelativeLayout>
    <View
        android:background="#F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/setting_fragment_guide_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/setting_version_icon"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/setting_fragment_guide_develop"
            />

        <TextView
            android:layout_toRightOf="@+id/setting_version_icon"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="版本信息"
            android:textColor="#050505"
            android:textSize="25sp" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/setting_fragment_guide_gotoversion"
            android:layout_marginRight="15dp"
            android:layout_width="20dp"
            android:layout_height="30dp"

            android:src="@drawable/setting_fragment_guide_goto" />

    </RelativeLayout>
</LinearLayout>